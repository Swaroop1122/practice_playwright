pipeline {
    agent { docker { image 'mcr.microsoft.com/playwright:v1.29.1-focal' } }
    stages {
        stage('Build') {
            steps {
                git branch: 'develop', credentialsId: '1', url: 'https://github.com/Swaroop1122/practice_playwright.git'
            }
        }
        stage('Test') {
            steps {
               sh 'npm install'
            }
        }
        stage('Release') {
            steps {
                sh 'npm test'
            }
        }
    }
    post { 
        always { 
            sh 'npm i -D @playwright/test allure-playwright'
            allure generate my-allure-results -o allure-report --clean
            echo 'Allure result Generated Successfully'
        }
    }
}
