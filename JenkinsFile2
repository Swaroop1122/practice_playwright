pipeline {
    agent { docker { image 'mcr.microsoft.com/playwright:v1.29.1-focal' } }
    stages {
        stage('Build') {
            steps {
                git branch: 'develop', credentialsId: '1', url: 'https://github.com/Swaroop1122/practice_playwright.git'
            }
        }
        stage('Install') {
            steps {
               sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
                stash name: 'my-allure-results', includes: 'my-allure-results/*'
            }
        }
         stage('Generate Report') {
            steps {
            sh './node_modules/.bin/allure generate ./my-allure-results'
       script {
            unstash 'my-allure-results
            allure results: [[path: 'my-allure-results']]
            

    }
    }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}
